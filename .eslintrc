{
    "env": {
        "node": true
    },
    "extends": ["airbnb-base", "prettier"],
    "overrides": [
        {
            "env": {
                "jest": true
            },
            "files": "__tests__/**/*"
        }
    ],
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "plugins": ["prettier"],
    "root": true,
    "rules": {
        "class-methods-use-this": [0],
        "indent": [1, 4],
        "prettier/prettier": ["error"],
        "strict": [0, "global"]
    }
}
